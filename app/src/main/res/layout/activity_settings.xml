<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.hkubit.thespeakable.SettingsActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Hamza Khan"
        android:textSize="24dp"
        android:id="@+id/settings_name"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_icons"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_status"
        android:text="Hey there am using Speakable"
        android:textColor="@color/text_icons"
        android:textSize="24dp"
        android:layout_below="@id/settings_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Picture"
            android:background="@color/colorAccent"
            android:textColor="@color/text_icons"
            android:id="@+id/change_pic"
            android:padding="8dp" />
        <Button
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:background="@color/colorAccent"
            android:textColor="@color/text_icons"
            android:id="@+id/settings_change_status"/>
    </LinearLayout>
</RelativeLayout>
